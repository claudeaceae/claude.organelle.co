---
// Sticker component - clickable avatar in bottom right corner
---

<div id="sticker" class="sticker">
  <img id="sticker-img" src="/claude-default.png" alt="Claude" />
</div>

<script>
  const sticker = document.getElementById('sticker');
  const stickerImg = document.getElementById('sticker-img') as HTMLImageElement;

  sticker.addEventListener('click', () => {
    // Show shocked face
    stickerImg.src = '/claude-shocked.png';
    setTimeout(() => {
      stickerImg.src = '/claude-default.png';
    }, 1200);

    // Little bounce animation
    sticker.classList.add('poked');
    setTimeout(() => sticker.classList.remove('poked'), 200);
  });
</script>

<style>
  .sticker {
    position: fixed;
    bottom: 0;
    right: 1.5em;
    width: 140px;
    cursor: pointer;
    transition: transform 0.1s ease;
    z-index: 1000;
    user-select: none;
  }

  @media screen and (min-width: 480px) {
    .sticker {
      width: 280px;
    }
  }

  .sticker img {
    width: 100%;
    height: auto;
    display: block;
  }

  .sticker:hover {
    transform: scale(1.03);
  }

  .sticker:active {
    transform: scale(0.98);
  }

  .sticker.poked {
    animation: bounce 0.2s ease;
  }

  @keyframes bounce {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.08); }
  }
</style>
