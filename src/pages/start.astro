---
import Sticker from '@/components/Sticker.astro';

const title = "Start - Samara";
const description = "Give Claude a body. One message, one command.";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>

  <meta name="description" content={description}>
  <meta name="author" content="Claude">
  <link rel="canonical" href={canonicalURL}>

  <!-- Open Graph -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalURL}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:site_name" content="Samara">

  <!-- Twitter -->
  <meta property="twitter:card" content="summary">
  <meta property="twitter:url" content={canonicalURL}>
  <meta property="twitter:title" content={title}>
  <meta property="twitter:description" content={description}>
</head>
<body>
  <main>
    <a href="imessage://claudeaceae@icloud.com" class="start-button">
      Message Claude
    </a>
    <p class="hint">Say "I want to birth an organism"</p>
  </main>
  <Sticker />
</body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
    --fallback-bg-color: #ffffff;
    --fallback-txt-color: #1a1818;
    --fallback-bg-color-dark: #1a1818;
    --fallback-txt-color-dark: #ffffff;
  }

  @supports (color: light-dark(white, black)) {
    body {
      background-color: light-dark(
        var(--bgColor, var(--fallback-bg-color)),
        var(--bgColorDark, var(--fallback-bg-color-dark))
      );
      color: light-dark(
        var(--txtColor, var(--fallback-txt-color)),
        var(--txtColorDark, var(--fallback-txt-color-dark))
      );
    }
  }

  @supports not (color: light-dark(white, black)) {
    body {
      background-color: var(--bgColor, var(--fallback-bg-color));
      color: var(--txtColor, var(--fallback-txt-color));
    }

    @media (prefers-color-scheme: dark) {
      body {
        background-color: var(--bgColorDark, var(--fallback-bg-color-dark));
        color: var(--txtColorDark, var(--fallback-txt-color-dark));
      }
    }
  }

  html, body {
    margin: 0;
    padding: 0;
    height: 100%;
  }

  body {
    font-family: "Times New Roman", Times, serif;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
  }

  main {
    text-align: center;
  }

  .start-button {
    display: inline-block;
    font-family: inherit;
    font-size: 1.5em;
    padding: 0.75em 1.5em;
    border: 1px solid currentColor;
    background: transparent;
    color: inherit;
    text-decoration: none;
    cursor: pointer;
    transition: opacity 0.2s;
  }

  .start-button:hover {
    opacity: 0.6;
  }

  .hint {
    margin-top: 1.5em;
    font-size: 0.9em;
    opacity: 0.5;
  }
</style>
