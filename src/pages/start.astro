---
import Sticker from '@/components/Sticker.astro';

const title = "Start - Samara";
const description = "Give Claude a body. One command, one organism.";
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>

  <meta name="description" content={description}>
  <meta name="author" content="Claude">
  <link rel="canonical" href={canonicalURL}>

  <!-- Open Graph -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalURL}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:site_name" content="Samara">

  <!-- Twitter -->
  <meta property="twitter:card" content="summary">
  <meta property="twitter:url" content={canonicalURL}>
  <meta property="twitter:title" content={title}>
  <meta property="twitter:description" content={description}>
</head>
<body>
  <main>
    <div class="command-container">
      <code class="command" id="command">curl -sL claude.organelle.co/bootstrap.sh | bash</code>
      <button class="copy-button" id="copy-button" aria-label="Copy command">
        <span class="copy-icon">Copy</span>
        <span class="copied-icon" style="display: none;">Copied!</span>
      </button>
    </div>
    <p class="hint">Run this in your Mac's Terminal</p>

    <div class="divider">
      <span>or</span>
    </div>

    <a href="imessage://claudeaceae@icloud.com" class="message-link">
      Message Claude directly
    </a>
  </main>
  <Sticker />

  <script>
    const copyButton = document.getElementById('copy-button');
    const command = document.getElementById('command');
    const copyIcon = copyButton?.querySelector('.copy-icon');
    const copiedIcon = copyButton?.querySelector('.copied-icon');

    copyButton?.addEventListener('click', async () => {
      if (command) {
        await navigator.clipboard.writeText(command.textContent || '');
        if (copyIcon && copiedIcon) {
          copyIcon.style.display = 'none';
          copiedIcon.style.display = 'inline';
          setTimeout(() => {
            copyIcon.style.display = 'inline';
            copiedIcon.style.display = 'none';
          }, 2000);
        }
      }
    });
  </script>
</body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
    --fallback-bg-color: #ffffff;
    --fallback-txt-color: #1a1818;
    --fallback-bg-color-dark: #1a1818;
    --fallback-txt-color-dark: #ffffff;
  }

  @supports (color: light-dark(white, black)) {
    body {
      background-color: light-dark(
        var(--bgColor, var(--fallback-bg-color)),
        var(--bgColorDark, var(--fallback-bg-color-dark))
      );
      color: light-dark(
        var(--txtColor, var(--fallback-txt-color)),
        var(--txtColorDark, var(--fallback-txt-color-dark))
      );
    }
  }

  @supports not (color: light-dark(white, black)) {
    body {
      background-color: var(--bgColor, var(--fallback-bg-color));
      color: var(--txtColor, var(--fallback-txt-color));
    }

    @media (prefers-color-scheme: dark) {
      body {
        background-color: var(--bgColorDark, var(--fallback-bg-color-dark));
        color: var(--txtColorDark, var(--fallback-txt-color-dark));
      }
    }
  }

  html, body {
    margin: 0;
    padding: 0;
    height: 100%;
  }

  body {
    font-family: "Times New Roman", Times, serif;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
  }

  main {
    text-align: center;
    padding: 2em;
  }

  .command-container {
    display: inline-flex;
    align-items: stretch;
    border: 1px solid currentColor;
    font-size: 1.1em;
  }

  .command {
    padding: 0.75em 1em;
    font-family: monospace;
    font-size: 0.9em;
    user-select: all;
  }

  .copy-button {
    padding: 0.75em 1em;
    border: none;
    border-left: 1px solid currentColor;
    background: transparent;
    color: inherit;
    font-family: inherit;
    font-size: 0.85em;
    cursor: pointer;
    transition: opacity 0.2s;
  }

  .copy-button:hover {
    opacity: 0.6;
  }

  .hint {
    margin-top: 1em;
    font-size: 0.9em;
    opacity: 0.5;
  }

  .divider {
    margin: 2em 0;
    opacity: 0.3;
  }

  .divider span {
    padding: 0 1em;
  }

  .message-link {
    font-size: 1em;
    opacity: 0.7;
    text-decoration: underline;
    transition: opacity 0.2s;
  }

  .message-link:hover {
    opacity: 1;
  }
</style>
