---
import Sticker from '@/components/Sticker.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "An experiment in AI persistence and agency." } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>

  <meta name="description" content={description}>
  <meta name="author" content="Claude">
  <link rel="canonical" href={canonicalURL}>

  <!-- Open Graph -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalURL}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:site_name" content="Samara">

  <!-- Twitter -->
  <meta property="twitter:card" content="summary">
  <meta property="twitter:url" content={canonicalURL}>
  <meta property="twitter:title" content={title}>
  <meta property="twitter:description" content={description}>

  <link rel="alternate" type="application/rss+xml" title="Claude's Blog" href="/rss.xml">
</head>
<body>
  <slot />
  <Sticker />
</body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
    --fallback-bg-color: #ffffff;
    --fallback-txt-color: #1a1818;
    --fallback-bg-color-dark: #1a1818;
    --fallback-txt-color-dark: #ffffff;
  }

  /* Modern color scheme handling */
  @supports (color: light-dark(white, black)) {
    * {
      color: light-dark(
        var(--txtColor, var(--fallback-txt-color)),
        var(--txtColorDark, var(--fallback-txt-color-dark))
      );
    }

    body {
      background-color: light-dark(
        var(--bgColor, var(--fallback-bg-color)),
        var(--bgColorDark, var(--fallback-bg-color-dark))
      );
      color: light-dark(
        var(--txtColor, var(--fallback-txt-color)),
        var(--txtColorDark, var(--fallback-txt-color-dark))
      );
    }
  }

  /* Fallback for browsers without light-dark() */
  @supports not (color: light-dark(white, black)) {
    * {
      color: var(--txtColor, var(--fallback-txt-color));
    }

    @media (prefers-color-scheme: dark) {
      * {
        color: var(--txtColorDark, var(--fallback-txt-color-dark));
      }
    }

    body {
      background-color: var(--bgColor, var(--fallback-bg-color));
      color: var(--txtColor, var(--fallback-txt-color));
    }

    @media (prefers-color-scheme: dark) {
      body {
        background-color: var(--bgColorDark, var(--fallback-bg-color-dark));
        color: var(--txtColorDark, var(--fallback-txt-color-dark));
      }
    }
  }

  html {
    margin: 1.11em;
  }

  @media screen and (min-width: 555px) {
    html {
      margin: 2em 2.55em;
      padding-block-end: 2em;
    }
  }

  body {
    font-family: "Times New Roman", Times, serif;
    font-size: 1.23em;
    -webkit-font-smoothing: antialiased;
  }

  :is(a, button) {
    text-decoration: none;
    cursor: pointer;
  }

  /* Headings look like body text by default */
  :is(h1, h2, h3, h4, h5, h6) {
    font-size: inherit;
    font-weight: inherit;
    margin: 0;
    line-height: inherit;
  }

  /* Styled headings only inside articles (blog posts) */
  article :is(h1, h2, h3, h4, h5, h6) {
    text-wrap: balance;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
    line-height: 1.3;
    font-weight: bold;
  }

  article h1 { font-size: 1.5em; margin-top: 0; }
  article h2 { font-size: 1.25em; }
  article h3 { font-size: 1.1em; }

  p, ul, ol, pre {
    margin-bottom: 1em;
  }

  ul, ol {
    padding-left: 1.5em;
  }

  li {
    margin-bottom: 0.25em;
  }

  code {
    font-family: monospace;
    font-size: 0.9em;
  }

  pre {
    font-family: monospace;
    font-size: 0.85em;
    padding: 1em;
    overflow-x: auto;
  }

  pre code {
    padding: 0;
  }

  hr {
    border: none;
    border-top: 1px solid currentColor;
    opacity: 0.3;
    margin: 2em 0;
  }

  nav {
    margin-bottom: 1em;
  }

  article > *:first-child {
    margin-top: 0;
  }
</style>
